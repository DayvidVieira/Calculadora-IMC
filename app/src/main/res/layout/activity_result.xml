<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ResultActivity">

    <LinearLayout
        android:id="@+id/vg_header"
        android:layout_width="413dp"
        android:layout_height="305dp"
        android:background="@drawable/gradient_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="24dp"
            android:src="@drawable/ic_monitor_wheight"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Calculador IMC"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="confirme abaixo o seu resultado e classificação: "
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:maxLength="6"
            android:textColor="@color/white"
            android:textSize="52sp"
            android:textStyle="bold"
            tools:text="23.66" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_classificacao_label"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A classificação do seu imc é: " />

    <TextView
        android:id="@+id/tv_classificacao"
        android:layout_width="wrap_content"
        android:textColor="@color/primary_900"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="Normal" />
</LinearLayout>



